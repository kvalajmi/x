    "express-rate-limit": "^7.2.0",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "libphonenumber-js": "^1.10.58",
    "multer": "^2.0.0-rc.4",
    "p-queue": "^7.4.1",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "whatsapp-web.js": "^1.24.0",
    "xlsx": "^0.18.5"
