{
  "name": "whatsapp-bulk-backend",
  "version": "1.0.0",
  "description": "WhatsApp Bulk Messaging Backend System",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "system": "node start-system.js",
    "system:dev": "node start-system.js",
    "diagnostic": "node diagnostic.js",
    "health": "node diagnostic.js",
    "build": "cd frontend && npm install && npm run build",
